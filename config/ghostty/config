# Kitty-inspired font settings
theme = Gruvbox Dark
font-family = "JetBrains Mono"
font-size = 13
adjust-cell-height = 25%

# Interaction tweaks that mirror Kitty
scrollback-limit = 10485760
mouse-hide-while-typing = true
mouse-scroll-multiplier = precision:1,discrete:2
focus-follows-mouse = true
copy-on-select = true
selection-clear-on-copy = true
clipboard-trim-trailing-spaces = true

# Window geometry/layout
window-decoration = none
window-width = 80
window-height = 20
window-padding-x = 0
window-padding-y = 0
window-save-state = never
window-step-resize = true
gtk-tabs-location = bottom
window-show-tab-bar = auto

# Bell: audio only, suppress visual/system attention
bell-features = audio,no-system,no-attention,no-title,no-border

# Clipboard controls
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+c=copy_to_clipboard
keybind = ctrl+backspace=text:\x17

# Scrollback inspection/navigation
keybind = ctrl+shift+k=scroll_page_lines:-1
keybind = ctrl+shift+j=scroll_page_lines:1
keybind = ctrl+shift+page_up=scroll_page_up
keybind = ctrl+shift+page_down=scroll_page_down
keybind = ctrl+shift+home=scroll_to_top
keybind = ctrl+shift+end=scroll_to_bottom
keybind = ctrl+shift+h=write_scrollback_file:open

# Window/split management
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+w=close_window
keybind = ctrl+enter=ignore
keybind = ctrl+-=new_split:down
keybind = ctrl+backslash=new_split:right
keybind = ctrl+bracket_right=goto_split:next
keybind = ctrl+bracket_left=goto_split:previous
keybind = ctrl+shift+arrow_left=goto_split:left
keybind = ctrl+shift+arrow_right=goto_split:right
keybind = ctrl+shift+arrow_up=goto_split:up
keybind = ctrl+shift+arrow_down=goto_split:down
keybind = ctrl+shift+l=toggle_split_zoom
keybind = f11=toggle_fullscreen

# Tab workflow
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+q=close_tab:this
keybind = ctrl+shift+s=toggle_tab_overview
keybind = f2=prompt_surface_title
keybind = ctrl+shift+.=move_tab:1
keybind = ctrl+shift+,=move_tab:-1
keybind = ctrl+shift+1=goto_tab:1
keybind = ctrl+shift+2=goto_tab:2
keybind = ctrl+shift+3=goto_tab:3
keybind = ctrl+shift+4=goto_tab:4
keybind = ctrl+shift+5=goto_tab:5
keybind = ctrl+shift+6=goto_tab:6
keybind = ctrl+shift+7=goto_tab:7
keybind = ctrl+shift+8=goto_tab:8
keybind = ctrl+shift+9=goto_tab:9

# Disable kitty-style Alt+digit tab switching
keybind = alt+1=unbind
keybind = alt+2=unbind
keybind = alt+3=unbind
keybind = alt+4=unbind
keybind = alt+5=unbind
keybind = alt+6=unbind
keybind = alt+7=unbind
keybind = alt+8=unbind
keybind = alt+9=unbind
keybind = alt+0=unbind
keybind = alt+digit_1=unbind
keybind = alt+digit_2=unbind
keybind = alt+digit_3=unbind
keybind = alt+digit_4=unbind
keybind = alt+digit_5=unbind
keybind = alt+digit_6=unbind
keybind = alt+digit_7=unbind
keybind = alt+digit_8=unbind
keybind = alt+digit_9=unbind
keybind = alt+digit_0=unbind

# Font size management (freeing ctrl+- for splits)
keybind = ctrl+numpad_add=increase_font_size:1
keybind = ctrl+numpad_subtract=decrease_font_size:1
keybind = ctrl+numpad_0=reset_font_size

# Misc helpers
keybind = f5=reload_config
keybind = f6=open_config
keybind = f3=toggle_command_palette
