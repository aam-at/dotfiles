[
  {
    "label": "Magit",
    "command": "magit --tty",
    "shell": {
      "program": "bash"
    },
    "hide": "on_success",
    "reveal_target": "center",
    "show_summary": false,
    "show_command": false,
    "allow_concurrent_runs": false,
    "use_new_terminal": true
  },
  {
    "label": "Gitui",
    "command": "gitui",
    "shell": {
      "program": "bash"
    },
    "hide": "on_success",
    "reveal_target": "center",
    "show_summary": false,
    "show_command": false,
    "allow_concurrent_runs": false,
    "use_new_terminal": true
  },
  {
    "label": "latexmk",
    "command": "latexmk",
    "args": [
      "-synctex=1",
      "-pdf",
      "-recorder",
      "$ZED_FILENAME"
    ],
    "cwd": "$ZED_DIRNAME",
    "tags": [
      "latex-build"
    ]
  }
]
