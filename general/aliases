alias tree2='tree --dirsfirst -ChFLQ 2'
alias tree3='tree --dirsfirst -ChFLQ 3'
alias tree4='tree --dirsfirst -ChFLQ 4'
alias tree5='tree --dirsfirst -ChFLQ 5'
