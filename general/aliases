alias ..="cd .."
alias ...="cd ../.."

alias la="ls -lahG"
alias ll="ls -lhG"
# List only directories
alias lsd="ls -d */"

################################
###  File ShortCut           ###
################################
alias D="cd ~/Downloads"
alias d="cd ~/Dropbox"
# See https://github.com/syl20bnr/spacemacs/wiki/Terminal
alias e="emacsclient -t"
alias ec="emacsclient -c -a emacs"

################################
###  Program ShortCut        ###
