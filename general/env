# Define environement variables which will be automatically sourced
# for bash and shell scripts.
# http://unix.stackexchange.com/questions/176322/share-environment-variables-between-bash-and-fish/176331#176331

export ALTERNATE_EDITOR=vim
export EDITOR="emacsclient -t"
export VISUAL="emacsclient -t"

# Configure cuda
export CUDA_HOME="/usr/local/cuda"
export PATH="$CUDA_HOME/bin:$PATH"
export CPATH="$CUDA_HOME/include:$CPATH"
export LD_LIBRARY_PATH="$CUDA_HOME/lib64:$LD_LIBRARY_PATH"
export LIBRARY_PATH="$CUDA_HOME/lib64:$LIBRARY_PATH"

# Configure cudnn
export CUDNN_HOME="~/.local/lib/cudnn"
export CPATH="$CUDNN_HOME/include:$CPATH"
export LD_LIBRARY_PATH="$CUDNN_HOME/lib64:$LD_LIBRARY_PATH"
export LIBRARY_PATH="$CUDNN_HOME/lib64:$LIBRARY_PATH"

# Configure cnmem
export CNMEM_HOME="/.local/lib/cnmem"
export CPATH="$CNMEM_HOME/include:$CPATH"
export LD_LIBRARY_PATH="$CNMEM_HOME/lib64:$LD_LIBRARY_PATH"
export LIBRARY_PATH="$CNMEM_HOME/lib64:$LIBRARY_PATH"

export GOPATH="$HOME/local/go_packages"
export PATH="$HOME/.local/bin:$HOME/bin:$PATH"
export PATH="$GOPATH/bin:$PATH"
export CURL_CA_BUNDLE=/etc/ssl/certs/ca-certificates.crt
