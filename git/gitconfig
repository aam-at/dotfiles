[include]
    path = ~/dotfiles/git/aliases.gitconfig
    path = ~/dotfiles/git/themes.gitconfig
    path = ~/dotfiles/config/catppuccin/delta/catppuccin.gitconfig
[core]
    editor = /usr/bin/vim
    filemode = false
    autocrlf = input
    pager = delta
[interactive]
    diffFilter = delta --color-only
[diff]
    tool = kitty
    guitool = kitty.gui
[delta]
    features = gruvbox-dark
    navigate = true
    side-by-side = true
[merge]
    conflictstyle = diff3
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE
[user]
    email = alexander.matyasko@gmail.com
    name = Alexander Matyasko
[diff "gpg"]
	textconv = gpg --no-tty --decrypt
[push]
	default = simple
[github]
	user = alexander.matyasko@gmail.com
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
